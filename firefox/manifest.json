{
    "manifest_version": 3,
    "name": "Fly Away",
    "version": "1.0.5",
    "description": "Redirects you to Bluesky when you visit Twitter.",
    "homepage_url": "https://github.com/MidnightWolf420/Fly-Away",
    "permissions": [
      "webRequest",
      "webRequestBlocking",
      "tabs",
      "storage"
    ],
    "host_permissions": [
        "*://*.twitter.com/*",
        "*://*.x.com/*"
    ],
    "action": {
        "default_title": "Fly Away Settings",
        "default_popup": "settings.html"
    },
    "background": {
      "scripts": ["background.js"]
    },
    "browser_specific_settings": {
        "gecko": {
          "id": "fuck-twitter@midnight-wolf"
        }
    }
  }
  