{
    "manifest_version": 3,
    "name": "Fuck You Twitter",
    "version": "1.0",
    "description": "Redirects you to Bluesky when you visit Twitter.",
    "homepage_url": "https://github.com/MidnightWolf420/fuck-you-twitter",
    "permissions": [
      "webRequest",
      "webRequestBlocking",
      "tabs",
      "activeTab"
    ],
    "host_permissions": [
      "*://*.twitter.com/*",
      "*://*.x.com/*",
      "*://bluesky.social/*"
    ],
    "icons": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "64": "icons/icon-64.png",
      "128": "icons/icon-128.png"
    },
    "background": {
      "scripts": ["background.js"]
    },
    "browser_specific_settings": {
        "gecko": {
          "id": "fuck-twitter@midnight-wolf"
        }
    }
  }
  